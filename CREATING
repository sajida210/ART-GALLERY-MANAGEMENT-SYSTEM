CREATE TABLE EXHIBITION (
    exID INT PRIMARY KEY,
    EXNAME VARCHAR(100),
    START_DATE DATE,
    ENDDATE DATE
);

CREATE TABLE EXHIBITION_TYPE (
    EXNAME VARCHAR(100) PRIMARY KEY,
    LOCATION VARCHAR(100)
);

CREATE TABLE ARTWORK (
    ARTID INT PRIMARY KEY,
    TITLE VARCHAR(100),
    YEAR INT,
    ART_TYPE VARCHAR(50),
    PRICE VARCHAR(20),
    ARTIST_ID INT,
    EXID INT,
    FOREIGN KEY (ARTIST_ID) REFERENCES ARTIST (ARTIST_ID),
    FOREIGN KEY (EXID) REFERENCES EXHIBITION (exID)
);

CREATE TABLE ARTIST (
    ARTIST_ID INT PRIMARY KEY,
    ARTISTNAME VARCHAR(100),
    ART_STYLE VARCHAR(100)
);

CREATE TABLE GALLERY (
    GID INT PRIMARY KEY,
    LOCATION VARCHAR(100),
    GNAME VARCHAR(100)
);

CREATE TABLE CUSTOMER (
    CUSTID INT PRIMARY KEY,
    NAME VARCHAR(100),
    PHONENUMBER VARCHAR(20),
    ADDRESS VARCHAR(200)
);
